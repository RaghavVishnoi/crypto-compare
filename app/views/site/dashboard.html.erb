<div class="wrapper row3">
  <main class="hoc container clear"> 
    <div class="dashboard-container">
      <div class="col-sm-12">
        <div class="container">
          <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="tab" href="#deribit" onclick="toggleOrderBooks('deribit')">Deribit</a></li>
            <li><a data-toggle="tab" href="#kraken" onclick="toggleOrderBooks('kraken')">Kraken</a></li>
            <li><a data-toggle="tab" href="#okcoin" onclick="toggleOrderBooks('okcoin')">Okcoin</a></li>
          </ul>

           <div class="col-sm-12 orderbook">
             <div id="deribit" class="tab-pane fade in active">
               <div class="col-sm-12">
                <div class="col-sm-6">
                  <label style="margin-left: 10%; height: 30px; margin-top: 10px;">Buy</label>
                </div>
                <div class="col-sm-6">
                  <label style="margin-left: 10%; height: 30px; margin-top: 10px;">Sell</label>
                </div>
               </div> 
               <div class="col-sm-12">
                <div class="col-sm-6 col-sm-offset-3">
                  <label style="margin-left: 30%;  height: 30px; margin-top: 10px;"><%=@avg_price%></label>
                </div>
               </div> 
              <script>
                var chart = AmCharts.makeChart("chartdiv", {
                  "type": "serial",
                  "theme": "none",
                  "rotate": true,
                  "marginBottom": 50,
                  "dataProvider": JSON.parse('<%= @deribits_details.to_json.html_safe -%>'),
                  "startDuration": 1,
                  "graphs": [{
                    "fillAlphas": 0.8,
                    "lineAlpha": 0.2,
                    "type": "column",
                    "valueField": "buy",
                    "title": "Buy",
                    "labelText": "[[value]]",
                    "clustered": false,
                    "labelFunction": function(item) {
                      return Math.abs(item.values.value);
                    },
                    "balloonFunction": function(item) {
                      return item.category + ": " + Math.abs(item.values.value);
                    }
                  }, {
                    "fillAlphas": 0.8,
                    "lineAlpha": 0.2,
                    "type": "column",
                    "valueField": "sell",
                    "title": "Sell",
                    "labelText": "[[value]]",
                    "clustered": false,
                    "labelFunction": function(item) {
                      return Math.abs(item.values.value);
                    },
                    "balloonFunction": function(item) {
                      return item.category + ": " + Math.abs(item.values.value);
                    }
                  }],
                  "categoryField": "price",
                  "categoryAxis": {
                    "gridPosition": "start",
                    "gridAlpha": 2,
                    "axisAlpha": 0
                  },
                  "valueAxes": [{
                    "gridAlpha": 0,
                    "ignoreAxisWidth": true,
                    "labelFunction": function(value) {
                      return Math.abs(value)
                    },
                    "guides": [{
                      "value": 0,
                      "lineAlpha": 2
                    }]
                  }],
                  "balloon": {
                    "fixedPosition": true
                  },
                  "chartCursor": {
                    "valueBalloonsEnabled": false,
                    "cursorAlpha": 0.05,
                    "fullWidth": true
                  },
                  "allLabels": [{
                    "text": "Buy",
                    "x": "28%",
                    "y": "100%",
                    "bold": true,
                    "align": "middle"
                  }, {
                    "text": "Sell",
                    "x": "75%",
                    "y": "100%",
                    "bold": true,
                    "align": "middle"
                  }],
                 "export": {
                    "enabled": false
                  }

                });
              </script>
              <div id="chartdiv" style="width: 100%; height: 280px;margin-top: 20px;"></div>

             
